<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header') %>
  <title>Host Dashboard - EventSphere</title>
</head>
<body class="bg-gray-100 min-h-screen">
  <%- include('../partials/host-nav') %>
  
  <div class="container mx-auto px-4 py-8">
    <!-- Flash Messages -->
    <% if (locals.success) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 flash-message">
        <%= success %>
      </div>
    <% } %>
    
    <% if (locals.error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4 flash-message">
        <%= error %>
      </div>
    <% } %>
    
    <!-- Welcome Section -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h1 class="text-2xl font-bold mb-2">Welcome, <%= user.person_name %>!</h1>
      <p class="text-gray-600">Manage your events and track participant registrations.</p>
    </div>
    
    <!-- Stats Section -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
          <div class="bg-indigo-100 rounded-full p-3 mr-4">
            <svg class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <p class="text-gray-500 text-sm">Total Events</p>
            <h3 class="text-2xl font-bold"><%= locals.stats ? stats.totalEvents : 0 %></h3>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
          <div class="bg-green-100 rounded-full p-3 mr-4">
            <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div>
            <p class="text-gray-500 text-sm">Total Participants</p>
            <h3 class="text-2xl font-bold"><%= locals.stats ? stats.totalParticipants : 0 %></h3>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
          <div class="bg-blue-100 rounded-full p-3 mr-4">
            <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-gray-500 text-sm">Total Revenue</p>
            <h3 class="text-2xl font-bold">$<%= locals.stats ? Number(stats.totalRevenue).toFixed(2) : '0.00' %></h3>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h2 class="text-xl font-bold mb-4">Quick Actions</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a href="/host/host-events" class="flex items-center p-4 border rounded-lg hover:bg-gray-50 transition">
          <div class="bg-indigo-100 rounded-full p-3 mr-4">
            <svg class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
          </div>
          <div>
            <h3 class="font-medium">Create New Event</h3>
            <p class="text-sm text-gray-500">Set up and publish a new event</p>
          </div>
        </a>
        
        <a href="/host/hosted-events" class="flex items-center p-4 border rounded-lg hover:bg-gray-50 transition">
          <div class="bg-indigo-100 rounded-full p-3 mr-4">
            <svg class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <div>
            <h3 class="font-medium">Manage Events</h3>
            <p class="text-sm text-gray-500">View and edit your existing events</p>
          </div>
        </a>
      </div>
    </div>
    
    <!-- Recent Events -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold">Recent Events</h2>
        <a href="/host/hosted-events" class="text-indigo-600 hover:text-indigo-800 text-sm">View all →</a>
      </div>
      
      <% if (locals.recentEvents && recentEvents.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead>
              <tr class="bg-gray-50">
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event Name</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Participants</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% recentEvents.forEach(event => { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= event.event_name %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-500"><%= new Date(event.start_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-500"><%= event.participant_count || 0 %> / <%= event.capacity %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <a href="/host/event-details/<%= event.event_id %>" class="text-indigo-600 hover:text-indigo-900 mr-4">View</a>
                    <a href="/host/edit-event/<%= event.event_id %>" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        
        <div class="mt-4 text-right">
          <a href="/host/hosted-events" class="text-indigo-600 hover:text-indigo-900 text-sm">View all events →</a>
        </div>
      <% } else { %>
        <div class="text-center py-6">
          <p class="text-gray-500">No events yet. <a href="/host/host-events" class="text-indigo-600 hover:text-indigo-900">Create your first event</a>.</p>
        </div>
      <% } %>
    </div>
    
    <!-- Upcoming Registrations -->
    <% if (locals.recentRegistrations && recentRegistrations.length > 0) { %>
      <div class="bg-white rounded-lg shadow-md p-6 mt-8">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-bold">Recent Registrations</h2>
        </div>
        
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead>
              <tr class="bg-gray-50">
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Participant</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% recentRegistrations.forEach(reg => { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= reg.person_name %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-500"><%= reg.event_name %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-500"><%= new Date(reg.registration_date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full 
                      <%= reg.status === 'confirmed' ? 'bg-green-100 text-green-800' : 
                         reg.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                         'bg-red-100 text-red-800' %>">
                      <%= reg.status.charAt(0).toUpperCase() + reg.status.slice(1) %>
                    </span>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    <% } %>
  </div>
  
  <%- include('../partials/footer') %>
</body>
</html>
